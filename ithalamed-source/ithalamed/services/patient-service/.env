# Application
NODE_ENV=development
PORT=3002
API_PREFIX=api/v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=ithalamed
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=ithalamed_patient
DATABASE_SCHEMA=patient
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# JWT (for validating tokens from auth-service)
JWT_ACCESS_SECRET=your-super-secure-access-token-secret-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m

# Auth Service URL (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key! 

# File Storage (for patient documents)
STORAGE_TYPE=local
