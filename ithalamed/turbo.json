{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [". env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ". next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test: e2e": {
      "dependsOn": ["build"],
      "outputs":  []
    },
    "clean":  {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db: seed": {
      "cache": false,
      "dependsOn": ["db:migrate"]
    }
  }
}
