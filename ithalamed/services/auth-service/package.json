{
  "name": "@ithalamed/auth-service",
  "version":  "1.0.0",
  "description": "Authentication and authorization service for IthalaMed platform",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:prod":  "node dist/main.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e. json",
    "db:migrate": "typeorm migration:run -d dist/config/typeorm.config.js",
    "db:migrate:revert": "typeorm migration:revert -d dist/config/typeorm.config.js"
  },
  "dependencies": {
    "@ithalamed/common": "workspace:*",
    "@ithalamed/database": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/throttler": "^5.1.1",
    "bcrypt": "^5.1.1",
    "class-transformer":  "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata":  "^0.1.14",
    "rxjs": "^7.8.1",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest":  "^29.5.11",
    "@types/node":  "^20.10.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader":  "^9.5.1",
    "ts-node":  "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
